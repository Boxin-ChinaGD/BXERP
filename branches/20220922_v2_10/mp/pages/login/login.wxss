.shopBrand{
  width: 100%;
  height: 400rpx;
  text-align: center;
}
.shopBrand image{
  height:  100%;
  width: 100%;
}
.compangName{
  position: absolute;
  margin-left: 60rpx;
  margin-top: 30rpx;
}
.vipCard .compangName text{
  color: #fff;
  font-size: 40rpx;
  font-weight: 500;
}

.vipCard{
  position: relative;
  height: 300rpx;
  width: 92%;
  font-size: 34rpx;
  margin: -100rpx 8rpx 0rpx 8rpx;
  margin-left: 4%;
}
.vipCard-head .background{
  position: absolute;
  height: 300rpx;
  width: 600rpx;
  margin-left: 215rpx;
  margin-top: -85rpx;
}

.vipCard-head{
  padding-top: 90rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
  margin-top:33rpx;
}

.vipCard-head .userInfo{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #fff;
  margin-left: -500rpx;
  margin-top: 50rpx;
}

.vipCard-head button{
  font-size: 34rpx;
  color: #fff;
  line-height: 40rpx;
  background: none;
  margin-top: -70rpx;
  margin-left: 140rpx;
}

.vipCard-foot{
  position: absolute;
  display: flex;
  justify-content: center;
  color:rgb(19, 1, 1);
  margin-top: 100rpx;
}

.vipCard-foot view{
  display: flex;
  flex-direction: column;
  text-align: center;
  margin-top: -70rpx;
  font-size:50rpx;
}

.vipCard-foot view:first-child{
  border-right: 2px solid #eee;
  padding-right: 100rpx;
 
}
.vipCard-foot view:last-child{
  padding-left: 100rpx;
 
}
.vipCard-foot view text:last-child{
  font-size: 28rpx;
}

.vipBonus{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 92%;
  margin-left: 4%;
  height: 150rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  background-color: #fff;
}
.btn-area{
  height: 300rpx;
  width:92%;
  margin-left: 4%;
}

.btn-area view{
  display: flex;
  background-color: #fff;
}

.btn-area  navigator{
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  font-size: 24rpx;
  /* border-right: 1rpx solid rgba(0, 0, 0, 0.5); */
  margin: 20rpx 20rpx;
}
.btn-area view navigator text{
  margin-left: 15rpx;
}

.btn-area view navigator image{
  width: 64rpx;
  height: 62rpx;
  margin: 0 30rpx;
}
.toGetPhoneNumberShade{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 99;
}

.toGetPhoneNumber{
  position: fixed;
  top: 50%;
  left: 0;
  right: 0;
  margin-top: -199rpx;
  padding: 0 8rpx;
  z-index: 999;
}

.toGetPhoneNumber view{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 398rpx;
  padding-top: 40rpx;
  border-radius: 8rpx;
  background-color: #fff;
}

.toGetPhoneNumber image{
  width: 144rpx;
  height: 144rpx;
  border-radius: 50%;
  margin: 0 auto;
}

.toGetPhoneNumber text{
  align-self: center;
  font-size: 34rpx;
  margin-top: 20rpx;
}

.toGetPhoneNumber button{
  color: #fff;
  font-size: 34rpx;
  width: 420rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 8rpx;
  background-color: #07C160;
  margin-top: 40rpx;
}